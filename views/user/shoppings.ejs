<!-- navigationbar -->
<%- include('../includes/navigation.ejs') %>

    <!-- header -->
    <%- include('../includes/head.ejs') %>

        <!-- checked box -->
        <section class="signupSec1">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="collapse" id="navbarToggleExternalContent">
                            <div class="bg-dark p-4">
                                <form class="d-flex pt-3 pb-3">
                                    <input class="form-control me-2" type="search" placeholder="Search"
                                        aria-label="Search">
                                    <button class="btn btn-outline-success" type="submit">Search</button>
                                </form>
                                <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                                    <% for(category of categories){%>
                                        <label class="btn btn-outline-success" for="btnradio1">
                                            <%= category.Name %>
                                        </label>
                                        <% } %>
                                </div>
                            </div>
                        </div>
                        <nav class="navbar">
                            <div class="container-fluid">
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#navbarToggleExternalContent"
                                    aria-controls="navbarToggleExternalContent" aria-expanded="false"
                                    aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </section>

        <!-- section-1 -->
        <section class="signupSec1">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h1 class="signupSec1Text d-flex justify-content-center">Shoppings</h1>
                    </div>
                </div>
            </div>
        </section>

        <!-- section-2 -->
        <section class="signupSec1">
            <div class="container">
                <div class="row w-100">
                    <% for(product of products){%>
                        <div class="col-12 col-sm-6 col-md-6 col-lg-3 mt-4">
                            <div class="card border-0 sec3Card" style="background-color:transparent;">
                                <img style="height:350px ; width: 100%; " src="./images/shopping/<%= product.Images[0] %>"
                                    class="card-img-top rounded" alt="...">
                                <div class="card-body">
                                    <div class="d-flex">
                                        <a href="/shoppings/<%= product._id %>" class="sec3Text5">Details</a>
                                    </div>
                                    <h5 class="mt-3 card-title sec3Text3">
                                        <%= product.ShortName %>
                                    </h5>
                                    <p class="mt-3 shopSec2Price rounded-2">â‚¹ <%= product.Price %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </section>

        <!-- footer -->
        <%- include('../includes/end.ejs') %>