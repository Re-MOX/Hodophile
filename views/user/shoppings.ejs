<!-- navigationbar -->
<%- include('../includes/navigation.ejs') %>

    <!-- infoBar -->
    <%- include('../includes/infoHeader.ejs') %>

    <!-- header -->
    <%- include('../includes/head.ejs') %>

        <!-- checked box -->
        <section class="signupSec1">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <span id="Category" style="visibility:hidden ;"><%= Category %></span>
                    <div class="d-flex col-12">
                        <ul class="mt-2 p-0">
                            <li id="All" onclick="filterProducts('All')" class="btn btn-outline-success mt-2">All</li>
                            <% for(category of categories){%>
                                <li id="<%= category.Name %>" onclick="filterProducts('<%= category.Name %>')"
                                    class="btn btn-outline-success mt-2"><%= category.Name %></li>
                                <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- section-1 -->
        <section class="signupSec1">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h1 class="signupSec1Text d-flex justify-content-center">Shoppings</h1>
                    </div>
                </div>
            </div>
        </section>

        <!-- section-2 -->
        <section class="signupSec1">
            <div class="container" style="padding: 24px 0;">
                <div class="row centerSec2">
                    <% for(product of products){%>
                        <div class="col-8 col-sm-6 col-md-4 col-lg-3 mt-4" style="position: relative;">
                            <div style="display: block; height: 100%;padding: 6px 6px; background-color: #fff; border-radius: 10px;  box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);">
                              <div class="card border-0 sec3Card">
                                <a href="/shoppings/<%= product._id %> ">
                                    <img class="ShoppingmainImages" src="./images/shopping/<%= product.Images[0] %>"
                                        class="card-img-top rounded" alt="...">
                                </a>
                                <div class="card-body p-0 ">
                                    <% if( wishlist==null ){%>
                                        <i id="<%= product._id %>Wishlist"
                                            onclick="addToWishlist('<%= product._id %>','<%= userId %>')"
                                            class="sec6LoveLike fa-solid fa-heart"></i>
                                        <%}else{%>
                                            <% for( i=0 ; i < wishlist.Products.length ; i++ ){%>
                                                <% if( wishlist.Products[i].productId==product._id ){%>
                                                    <i id="<%= product._id %>Wishlist"
                                                        onclick="addToWishlist('<%= product._id %>','<%= userId %>')"
                                                        class="sec6LoveUnlike fa-solid fa-heart"></i>
                                                    <% break %>
                                                        <%}else{%>
                                                            <i id="<%= product._id %>Wishlist"
                                                                onclick="addToWishlist('<%= product._id %>','<%= userId %>')"
                                                                class="sec6LoveLike fa-solid fa-heart"></i>
                                                            <%} %>
                                                                <%} %>
                                                                    <%} %>
                                                                       <a href="/shoppings/<%= product._id %> ">
                                                                        <h5 class="mt-3 card-title sec3Text3">
                                                                            <%= product.ShortName %>
                                                                        </h5>
                                                                        <% if( product.Discount> 0 ){%>
                                                                            <p class="shoppingDiscountText mt-3 ">
                                                                                <%= product.Discount %> % OFF
                                                                            </p>
                                                                            <%} %>
                                                                                <p class="mt-3 shopSec2Price rounded-2">
                                                                                    â‚¹ <%= product.Price %>
                                                                                </p>
                                                                       </a>
                                </div>
                            </div>
                         </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </section>

        <!-- Add To Cart -->
        <script src="/js/addToCart.js"></script>

        <!-- Add To Wishlist -->
        <script src="/js/addToWishlist.js"></script>

        <!-- filterProducts -->
        <script src="/js/filterShoppings.js"></script>


        <!-- footer -->
        <%- include('../includes/end.ejs') %>