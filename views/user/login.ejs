<!-- navigationbar -->
<%- include('../includes/navigation.ejs') %>

    <!-- header -->
    <%- include('../includes/head.ejs') %>

        <!-- section-1 -->
        <section class="signupSec1">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h1 class="signupSec1Text d-flex justify-content-center">Login</h1>
                    </div>
                </div>
            </div>
        </section>

        <!-- section-2 -->
        <section class="loginSec2">
            <div class="container">
                <div class="row d-flex justify-content-center pt-5 pb-5">
                    <div class="col-sm-10 col-lg-6 ">
                        <form method="post" action="/login" class="signupSec2Form">
                            <h3 class="signupSec2Head">Login</h3>
                            <div class="signupSec2Error">
                                <% if (userErr.length>0){%>
                                    <div class="signupSec2ErrorBar d-flex justify-content-center">
                                        <p  class="text-center signupSec2ErrorText"><%= userErr %></p>
                                        <i class="signupSec2ErrorMark fa-regular fa-circle-xmark"></i>
                                    </div>
                                    <%} %>
                            </div>
                            <div class="mb-3 mt-2">
                                <label class="form-label signupSec2Text">Email</label>
                                <input name="email" type="email" class="form-control" placeholder=" Enter email Address"">
                            </div>
                            <div class="mb-3 mt-2">
                                <label class="form-label signupSec2Text">Password</label>
                                <input name="password" type="password" class="form-control" placeholder="Enter your Password">
                            </div>
                            <div class="mb-3 mt-2">
                                <label class="form-label signupSec2Text">Re-enter Password</label>
                                <input name="passwordConfirm" type="password" class="form-control" placeholder="Confirm Password">
                            </div>
                            <div class="mt-3 mb-3 d-flex justify-content-center">
                                <a style="text-decoration: none;" href="">
                                    <small class="text-danger">Forgot Password?</small>
                                </a>
                            </div>
                            <div class="mt-3 d-flex justify-content-center">
                                <a style="text-decoration: none;" href="/signup">
                                    <p class="text-primary ">Create a account?</p>
                                </a>
                            </div>
                            <div class="d-flex justify-content-center p-4">
                                <button type="submit" class="signupSec2FormButton">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- footer -->
        <%- include('../includes/end.ejs') %>