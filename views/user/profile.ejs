<!-- navigationbar -->
<%- include('../includes/navigation.ejs') %>

    <!-- header -->
    <%- include('../includes/head.ejs') %>

        <!-- section-1 -->
        <section class="signupSec1">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h1 class="signupSec1Text d-flex justify-content-center">Profile Page</h1>
                    </div>
                </div>
            </div>
        </section>

        <!-- section-2 -->
        <section class="profileSec2">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 p-5">
                        <div class="profileSec2Bar W-100 p-4 ">
                            <div class="d-flex justify-content-center">
                                <i class="profileSec2LeftLogo fa-solid fa-user"></i>
                            </div>
                            <div class="d-flex justify-content-center pt-3">
                                <h5 class="text-center"><%= user.firstName%> <%= user.lastName%></h5>
                            </div>
                            <div class="d-flex justify-content-center pt-3">
                                <form action="/logout" method="post">
                                    <button type="submit" class="btn btn-danger">Log out</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8 p-5">
                        <div class="profileSec2Bar W-100 p-4 ">
                            <div class="d-flex justify-content-center">
                                <h2 class="profileSec2BarTextHead text-center">User Details</h2>
                            </div>
                            <div class="d-flex mt-4 border border-2 rounded-4 p-3">
                                <h4 class="m-0">First name:</h4>
                                <div class="d-flex justify-content-center">
                                    <p class="m-0 ms-3 profileSec2BarText"><%= user.firstName%></p>
                                </div>
                            </div>
                            <div class="d-flex mt-4 border border-2 rounded-4 p-3">
                                <h4 class="m-0">Last name:</h4>
                                <div class="d-flex justify-content-center">
                                    <p class="m-0 ms-3 profileSec2BarText"><%= user.lastName%></p>
                                </div>
                            </div>
                            <div class="d-flex mt-4 border border-2 rounded-4 p-3">
                                <h4 class="m-0">Email:</h4>
                                <div class="d-flex justify-content-center">
                                    <p class="m-0 ms-3 profileSec2BarText"><%= user.email%></p>
                                </div>
                            </div>
                            <div class="d-flex mt-4 border border-2 rounded-4 p-3">
                                <h4 class="m-0">Contact:</h4>
                                <div class="d-flex justify-content-center">
                                    <p class="m-0 ms-3 profileSec2BarText"><%= user.contact%></p>
                                </div>
                            </div>
                            <div class="d-flex mt-4 border border-2 rounded-4 p-3">
                                <h4 class="m-0">Age:</h4>
                                <div class="d-flex justify-content-center">
                                    <p class="m-0 ms-3 profileSec2BarText"><%= user.age%></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- footer -->
        <%- include('../includes/end.ejs') %>