<!-- navigationbar -->
<%- include('../includes/navigation.ejs') %>

    <!-- header -->
    <%- include('../includes/head.ejs') %>

        <!-- section-1 -->
        <section class="signupSec1">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h1 class="signupSec1Text d-flex justify-content-center">Address</h1>
                    </div>
                </div>
            </div>
        </section>

        <!-- section-2 -->
        <section class="profileSec2">
            <div class="container">
                <div class="row">
                    <div class="col-4 col-md-3 col-xl-2">
                        <div class="col-12">
                            <a href="/profile" class="profileSec2LeftButton">Your Profile</a>
                        </div>
                        <div class="col-12 mt-3">
                            <a href="/profile/shoppings/<%= user._id %>" class="profileSec2LeftButton">Your
                                Shoppings</a>
                        </div>
                        <div class="col-12 mt-3">
                            <a href="/profile/bookings/<%= user._id %>" class="profileSec2LeftButton">Your Bookings</a>
                        </div>
                        <div class="col-12 mt-3">
                            <a onclick="userLogout()" class="profileSec2LeftButton">Log Out</a>
                        </div>
                    </div>
                    <div class="profileSec2RightBar col-8 col-md-9 col-xl-10">
                        <div class="row d-flex justify-content-center">
                            <div class="col-10">
                                <form action="/profile/shoppings/address/<%= index %>/<%= user._id %>" method="post">
                                    <div class="mb-3 mt-2">
                                        <label class="form-label signupSec2Text">Name</label>
                                        <input type="text" name="addressName" class="form-control"
                                            value="<%= address.Name %>" required>
                                    </div>
                                    <div class="mb-3 mt-2">
                                        <label class="form-label signupSec2Text">Address</label>
                                        <input type="text" name="address" class="form-control"
                                            value="<%= address.Address %>" required>
                                    </div>
                                    <div class="d-flex mt-2">
                                        <div class="mb-3 pe-2  signupSec2FormBar">
                                            <label class="form-label signupSec2Text">Country</label>
                                            <input type="text" name="addressCountry" class="form-control"
                                                value="<%= address.Country %>" required>
                                        </div>
                                        <div class="mb-3 signupSec2FormBar">
                                            <label class="form-label signupSec2Text">State</label>
                                            <input type="text" name="addressState" class="form-control"
                                                value="<%= address.State %>" required>
                                        </div>
                                    </div>
                                    <div class="d-flex mt-2">
                                        <div class="mb-3 pe-2  signupSec2FormBar">
                                            <label class="form-label signupSec2Text">City</label>
                                            <input type="text" name="addressCity" class="form-control"
                                                value="<%= address.City %>" required>
                                        </div>
                                        <div class="mb-3 signupSec2FormBar">
                                            <label class="form-label signupSec2Text">Pin Code</label>
                                            <input type="number" name="addressPincode" class="form-control"
                                                value="<%= address.PIN %>" maxlength="6" required>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center p-4">
                                        <button type="submit" class="signupSec2FormButton">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </section>

        <!-- Swal Alert -->
        <script src="/js/swalAlert.js"></script>

        <!-- profile -->
        <script src="/js/profile.js"></script>

        <!-- footer -->
        <%- include('../includes/end.ejs') %>