<!-- navigationbar -->
<%- include('../includes/navigation.ejs') %>

    <!-- header -->
    <%- include('../includes/head.ejs') %>

        <!-- section-1 -->
        <section class="signupSec1">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h1 class="signupSec1Text d-flex justify-content-center">Sign Up</h1>
                    </div>
                </div>
            </div>
        </section>

        <!-- section-2 -->
        <section class="signupSec2">
            <div class="container">
                <div class="row d-flex justify-content-center pt-5 pb-5">
                    <div class="col-sm-10 col-lg-6 ">
                        <form id="form" method="post" action="/signup" class="signupSec2Form">
                            <h3 class="signupSec2Head">Sign Up</h3>
                            <% if (userErr.length>0){%>
                                <span id="Err"></span>
                                <div class="signupSec2ErrorBar d-flex justify-content-center">
                                    <p id="ErrText" class="text-center signupSec2ErrorText">
                                        <%= userErr %>
                                    </p>
                                    <i class="signupSec2ErrorMark fa-regular fa-circle-xmark"></i>
                                </div>
                                <%}else{%>
                                    <div id="Err" class="errBar">
                                        <div class="signupSec2ErrorBar d-flex justify-content-center">
                                            <p id="ErrText" class="text-center signupSec2ErrorText"></p>
                                            <i class="signupSec2ErrorMark fa-regular fa-circle-xmark"></i>
                                        </div>
                                    </div>
                                    <%} %>
                            <div class="d-flex">
                                <div class="mb-3 pe-2 signupSec2FormBar">
                                    <label class="form-label signupSec2Text">First Name</label>
                                    <input id="firstName" type="text" class="form-control" name="firstName"
                                        placeholder="Enter First Name">
                                </div>
                                <div class="mb-3 signupSec2FormBar">
                                    <label class="form-label signupSec2Text">Last Name</label>
                                    <input id="lastName" type="text" class="form-control" name="lastName"
                                        placeholder=" Enter Last Name">
                                </div>
                            </div>
                            <div class="mb-3 mt-2">
                                <label class="form-label signupSec2Text">Email</label>
                                <input id="email" type="email" class="form-control" name="email"
                                    placeholder=" Enter email Address"">
                                <div class=" form-text">We'll never share your email with anyone else.
                            </div>
                    </div>
                    <div class="d-flex mt-2">
                        <div class="mb-3 pe-2 signupSec2FormBar">
                            <label class="form-label signupSec2Text">Contact</label>
                            <input id="contact" type="number" class="form-control" name="contact" placeholder="+91 ">
                        </div>
                        <div class="mb-3 signupSec2FormBar">
                            <label class="form-label signupSec2Text">Age</label>
                            <input id="age" type="number" class="form-control" name="age" placeholder="Enter your Age">
                        </div>
                    </div>
                    <div class="mb-3 mt-2">
                        <label class="form-label signupSec2Text">Password</label>
                        <input id="password" type="password" class="form-control" name="password"
                            placeholder="Enter your Password">
                    </div>
                    <div class="mb-3 mt-2">
                        <label class="form-label signupSec2Text">Re-enter Password</label>
                        <input id="passwordConfirm" type="password" class="form-control" name="passwordConfirm"
                            placeholder="Confirm Password">
                    </div>
                    <div class="mt-3 d-flex justify-content-center">
                        <a style="text-decoration: none;" href="/login">
                            <p class="text-primary ">Already have an account? </p>
                        </a>
                    </div>
                    <div class="d-flex justify-content-center p-4">
                        <button type="submit" class="signupSec2FormButton">Submit</button>
                    </div>
                    </form>
                </div>
            </div>
            </div>
        </section>

        <!-- frontEnd validation -->
        <script src="/js/userSignupValidation.js"></script>

        <!-- footer -->
        <%- include('../includes/end.ejs') %>